                  <!--@import partials/components/blog-card.html-->
                </div>
                <div class="col-12 col-sm-6 col-lg-4 col-xl-3 cards-grid">
                  <!--@import partials/components/blog-card.html-->
                </div>
              </div>
            </div>
            <!-- #region pagination -->
            <div class="pagination pagination--narrow">
              <button class="pagination__btn pagination__btn--prev">
                <svg class="icon pagination__icon">
                  <use href="/assets/icons.svg#arrow-left" />
                </svg>
              </button>
              <div class="pagination__list">
                <a
