<!DOCTYPE html>
<html lang="uk">
  <!--@import partials/layout/head.html-->
  <body>
    <div class="page">
      <!-- #region header -->
      <!--@import partials/layout/header.html-->
      <!-- #endregion header -->

      <!-- #region sidebar -->
      <!--@import partials/layout/sidebar.html-->
      <!-- #endregion sidebar -->

      <!-- #region menu -->
      <!--@import partials/components/menu.html-->
      <!-- #endregion menu -->

      <!-- #region content -->
      <main class="content page__content">
        <div class="content__crumbs">
          <div class="container container--screen-xl">
            <ul class="crumbs">
              <li class="crumbs__item">
                <a class="crumbs__endpoint crumbs__endpoint--link" href="#">Головна</a>
              </li>
              <li class="crumbs__item">
                <span class="crumbs__endpoint">Рекомендації пацієнтам</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- #region block -->
        <section class="block content__block">
          <div class="container container--screen-xl">
            <header class="block__header">
              <h1 class="block__title h2">Рекомендації пацієнтам</h1>
            </header>

            <!-- #region recommendations -->
            <div class="recommendations-page">
              <div class="row">
                <div class="col-12 col-lg-7 col-2xl-8">
                  <div class="recommendations-page__table">
                    <!--@import partials/components/recommendations-table.html-->
                  </div>
                </div>
                <div class="col-12 col-lg-5 col-2xl-4">
                  <!-- #region staff banner -->
                  <div class="staff-banner-ver recommendations-page__banner">
                    <div class="staff-banner-ver__inner">
                      <picture class="staff-banner-ver__img">
                        <source
                          type="image/webp"
                          srcset="assets/images/staff-banner/sopina.webp"
                        />
                        <img
                          class="staff-banner-ver__img-item"
                          src="assets/images/staff-banner/sopina.png"
                          alt="Dentaderm clinic doctor"
                          loading="lazy"
                        />
                      </picture>
                      <div class="staff-banner-ver__text">
                        <div class="staff-banner-ver__text-inner text-center">
                          <p>Отримайте особисту консультацію від наших спеціалістів!</p>
                        </div>
                      </div>
                      <div class="staff-banner-ver__footer">
                        <button
                          class="btn btn--white btn--square btn--fluid"
                          data-modal-id="modal-appointment"
                        >
                          Отримати консультацію
                        </button>
                      </div>
                    </div>
                  </div>
                  <!-- #endregion staff banner -->
                </div>
              </div>
            </div>
            <!-- #endregion recommendations -->
          </div>
        </section>
        <!-- #endregion block -->
      </main>
      <!-- #endregion content -->

      <!-- #region footer -->
      <!--@import partials/layout/footer.html-->
      <!-- #endregion footer -->
    </div>

    <!--@import partials/components/modal-appointment.html-->
    <!--@import partials/components/modal-success.html-->
    <!--@import partials/components/modal-error.html-->
    <!--@import partials/layout/scripts.html-->
  </body>
</html>
