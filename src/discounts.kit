              <!-- #region discount card -->
              <article class="discount-card discount-list__card">
                <a href="#" class="discount-card__link">
                  <div class="discount-info discount-card__info">
                    <picture class="discount-info__img">
                      <source
                        type="image/webp"
                        srcset="assets/images/discount/discount_thumb_1.webp"
                      />
                      <img
                        class="discount-info__img-item"
                        src="assets/images/discount/discount_thumb_1.jpg"
                        alt="img"
                      />
