                    <div class="discount-info__date">Безстроково</div>
                    <div class="discount-info__info">
                      <div class="discount-info__percentage">-25%</div>
                      <div class="discount-info__price">
                        <div
                          class="discount-info__price-item discount-info__price-item--old"
                        >
                          4 025
                        </div>
                        <div class="discount-info__price-item">3 000 грн</div>
                      </div>
                    </div>
                  </div>
